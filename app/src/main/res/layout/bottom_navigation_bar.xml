<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/c_black"
    android:padding="10dp">

    <ImageView
        android:id="@+id/navigation_bar_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/navigation_bar_play"
        android:layout_marginStart="20dp" />

    <ImageView
        android:id="@+id/navigation_bar_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigation_bar_home"
        app:layout_constraintEnd_toStartOf="@id/navigation_bar_study"/>
    <ImageView
        android:id="@+id/navigation_bar_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/study_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigation_bar_play"
        app:layout_constraintEnd_toStartOf="@id/navigation_bar_personal"/>
    <ImageView
        android:id="@+id/navigation_bar_personal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/navigation_bar_study"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>